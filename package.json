{
    "name": "vscode-ai-chat",
    "displayName": "AI Chat Assistant",
    "description": "React-based AI chat interface with workspace integration",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:aiChatView"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "aiChat.openChat",
                "title": "Open AI Chat",
                "category": "AI Chat"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "aiChatContainer",
                    "title": "AI Chat Assistant",
                    "icon": "$(comment-discussion)"
                }
            ]
        },
        "views": {
            "aiChatContainer": [
                {
                    "type": "webview",
                    "id": "aiChatView",
                    "name": "AI Chat Assistant"
                }
            ]
        },
        "configuration": {
            "title": "AI Chat Assistant",
            "properties": {
                "aiChat.openaiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "OpenAI API Key for chat functionality"
                },
                "aiChat.model": {
                    "type": "string",
                    "default": "gpt-3.5-turbo",
                    "description": "AI model to use for chat"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/highlight.js": "^9.12.4",
        "@types/marked": "^5.0.2",
        "@types/node": "16.x",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "css-loader": "^6.7.3",
        "eslint": "^8.28.0",
        "process": "^0.11.10",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.4.1",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "highlight.js": "^11.8.0",
        "marked": "^5.0.0",
        "openai": "^4.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
